@model IEnumerable<CRUD.Models.Musico>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (TempData["Alert"] != null)
{
    <script type="text/javascript">
          alert( "@(TempData["Alert"].ToString())");
    </script>
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeMusico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeMusico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MusicoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MusicoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MusicoId })
            </td>
        </tr>
    }

</table>
